#!/usr/bin/env expect-lite

##
## this space intentionally left blank
##

? $test_in_progress != 1 ? [
*~cleanup.inc
~tests/connect.inc
]

; ~~~~~~~~> $EL_testname: Check "get volt" <~~~~~~~~

? $EL_serial == NONE ? [

# BLE
>screen -S $EL_testname -X stuff "char-write-req 0x001b `echo -n get volt | xxd -ps`\015"
:5
>dehex $EL_BLELOG | tail

]::[

# serial
#>screen -S $EL_testname -X stuff "\015\015"
>screen -S $EL_testname -X stuff "get volt\015"
:5
>cat $EL_BLELOG | tail

]

<.*volt [5-6]\.[0-9]*

; ~~~~~~~~> $EL_testname: Test "get resist" <~~~~~~~~

? $EL_serial == NONE ? [

# BLE
>screen -S $EL_testname -X stuff "char-write-req 0x001b `echo -n get resist | xxd -ps`\015"
:5
>dehex $EL_BLELOG | tail

]::[

# Serial
>screen -S $EL_testname -X stuff "get resist\015"
:5
>cat $EL_BLELOG | tail

]

<.*resist [0-3]\.[0-9][0-9]

; ~~~~~~~~> $EL_testname: Test "get time" <~~~~~~~~

? $EL_serial == NONE ? [

# BLE
>screen -S $EL_testname -X stuff "char-write-req 0x001b `echo -n get time | xxd -ps`\015"
>dehex $EL_BLELOG | tail

]::[

# Serial
>screen -S $EL_testname -X stuff "get time\015"
>cat $EL_BLELOG | tail

]
<UTC time: [0-9][0-9]?:[0-5][0-9]?:[0-5][0-9]?

; ~~~~~~~~> $EL_testname: Test "get date" <~~~~~~~~

? $EL_serial == NONE ? [

# BLE
>screen -S $EL_testname -X stuff "char-write-req 0x001b `echo -n get date | xxd -ps`\015"
>dehex $EL_BLELOG | tail

]::[

# Serial
>screen -S $EL_testname -X stuff "get date\015"
>cat $EL_BLELOG | tail

]

<UTC date: 202[1-9]/[0-9][0-9]?/[0-9][0-9]?

? $test_in_progress != 1 ? ~tests/cleanup.inc
