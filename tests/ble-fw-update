#!/usr/bin/env expect-lite

~connect.inc

##------------------------------------------------------------------##

; ============ Test download "fw dwld ble" ============
@120
>cat /dev/null > $SCREENLOG
>echo -n "fw dwld ble" | xxd -ps
+$cmd=\n(.*)
>screen -r $myscreen
>char-write-req 0x001b $cmd
<Characteristic value was written successfully
<Notification handle = 0x001b value: 42 79 74 65 73 20 74 6f 20 67 6f 3a 20 30 20 62 79 74 65 73 
>>^A
>^D
>
@$EL_timeout

; ============ Verify download "fw dwld ble" ============
>dehex $SCREENLOG
-<Please try again
-<Unknown
<Bytes to go: 0 bytes

##------------------------------------------------------------------##

; ============ Test "fw ble" ============
>cat /dev/null > $SCREENLOG
>echo -n "fw ble" | xxd -ps
+$cmd=\n(.*)
>screen -r $myscreen
>char-write-req 0x001b $cmd
<Characteristic value was written successfully
>>exit
>

:45

##------------------------------------------------------------------##

~connect.inc

##------------------------------------------------------------------##

; ============ Test "restart" ============
>cat /dev/null > $SCREENLOG
>echo -n "restart" | xxd -ps
+$cmd=\n(.*)
>screen -r $myscreen
>char-write-req 0x001b $cmd
<Characteristic value was written successfully
>>exit
>

; ============ Verify "restart" ============
>dehex $SCREENLOG
-<Please try again
-<Unknown
<Restarting

:45

##------------------------------------------------------------------##

~connect.inc

##------------------------------------------------------------------##

; ============ Test BLE "version" ============
>cat /dev/null > $SCREENLOG
>echo -n "version" | xxd -ps
+$cmd=\n(.*)
>screen -r $myscreen
>char-write-req 0x001b $cmd
<Characteristic value was written successfully
<Notification handle = 0x001b value:
>>^A
>^D
>

; ============ Verify BLE "version" ============
>dehex $SCREENLOG
-<Please try again
-<Unknown
<TI_VERS = $EL_fw_bleversion

##------------------------------------------------------------------##

~cleanup.inc
