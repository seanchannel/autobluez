#!/usr/bin/env expect-lite

? $test_in_progress != 1 ? ~connect.inc

##-------------------------------------------------------------------##

; ============ $EL_testname: "ssid reset" ============
>cp /dev/null $EL_SCREENLOG-tmp
>echo -n "ssid reset" | xxd -ps
+$cmd=\n(.*)
>screen -r $EL_testname
>char-write-req 0x001b $cmd
#<Characteristic value was written successfully
<Notification handle = 0x001b value: 73 73 69 64 20 63 68 61 72 73 20 3d 20 30 00 00 00 00 00 00 
>>^A
>^D
>

; ============ $EL_testname: Verify "ssid reset" e.g. "ssid chars = 0" ============
>dehex $EL_SCREENLOG-tmp
-<Please try again
-<Unknown
<ssid chars = 0

##-------------------------------------------------------------------##

; ============ $EL_testname: "ssid save" ============
>cp /dev/null $EL_SCREENLOG-tmp
>echo -n "ssid save" | xxd -ps
+$cmd=\n(.*)
>screen -r $EL_testname
>char-write-req 0x001b $cmd
#<Characteristic value was written successfully
<Notification handle = 0x001b value: 73 73 69 64 20 73 61 76 65 64 00 00 00 00 00 00 00 00 00 00 
>>^A
>^D
>

; ============ $EL_testname: Verify "ssid save" e.g. "ssid saved" ============
>dehex $EL_SCREENLOG-tmp
-<Please try again
-<Unknown
<ssid saved

##-------------------------------------------------------------------##

; ============ $EL_testname: "ssid show" ============
>cp /dev/null $EL_SCREENLOG-tmp
>echo -n "ssid show" | xxd -ps
+$cmd=\n(.*)
>screen -r $EL_testname
>char-write-req 0x001b $cmd
#<Characteristic value was written successfully
<Notification handle = 0x001b value: 73 73 69 64 20 3d 
>>^A
>^D
>

; ============ $EL_testname: Verify "ssid show" e.g. "ssid =" ============
>
>dehex $EL_SCREENLOG-tmp
-<Please try again
-<Unknown
<ssid =\s+\n

##-------------------------------------------------------------------##

; ============ $EL_testname: "pswd reset" ============
>cp /dev/null $EL_SCREENLOG-tmp
>echo -n "pswd reset" | xxd -ps
+$cmd=\n(.*)
>screen -r $EL_testname
>char-write-req 0x001b $cmd
#<Characteristic value was written successfully
<Notification handle = 0x001b value: 73 73 69 64 20 63 68 61 72 73 20 3d 20 30
>>^A
>^D
>

; ============ $EL_testname: Verify "pswd reset" e.g. "pswd chars = 0" ============
>dehex $EL_SCREENLOG-tmp
-<Please try again
-<Unknown
<pswd chars = 0

##-------------------------------------------------------------------##

; ============ $EL_testname: "pswd save" ============
>cp /dev/null $EL_SCREENLOG-tmp
>echo -n "pswd save" | xxd -ps
+$cmd=\n(.*)
>screen -r $EL_testname
>char-write-req 0x001b $cmd
#<Characteristic value was written successfully
<Notification handle = 0x001b value: 70 73 77 64 20 73 61 76 65 64 00 00 00 00 00 00 00 00 00 00 
>>^A
>^D
>

; ============ $EL_testname: Verify "pswd save" e.g. "pswd saved" ============
>dehex $EL_SCREENLOG-tmp
-<Please try again
-<Unknown
<pswd saved

##-------------------------------------------------------------------##

; ============ $EL_testname: "pswd show" ============
>cp /dev/null $EL_SCREENLOG-tmp
>echo -n "pswd show" | xxd -ps
+$cmd=\n(.*)
>screen -r $EL_testname
>char-write-req 0x001b $cmd
#<Characteristic value was written successfully
<Notification handle = 0x001b value: 70 73 77 64 20 3d
>>^A
>^D
>

; ============ $EL_testname: Verify "pswd show" e.g. "pswd =" ============
>dehex $EL_SCREENLOG-tmp
-<Please try again
-<Unknown
<pswd =\s+\n

##-------------------------------------------------------------------##

? $test_in_progress != 1 ? ~cleanup.inc

